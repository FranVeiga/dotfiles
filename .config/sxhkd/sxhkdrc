#
# wm independent hotkeys
#

# terminal emulator
super + {shift,control} + Return
	{termite,termite --name Float}

# program launcher
super + p
	rofi -modi drun -show drun -theme $HOME/.config/polybar/$(cat /tmp/theme)/scripts/rofi/launcher.rasi

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd


#
# bspwm hotkeys
#

super + b
    $HOME/scripts/bar-toggle

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}
super + shift + q
    $HOME/scripts/bspwm_logout

# close and kill
super + {_,control + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window.local

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# push windows to the hidden stack
super + w
    bspc node -g hidden
# pop all windows from the hidden stack
super + shift + w
    bspc node any.hidden.local -g hidden  

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,shift + comma,shift + period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window
#same but with other keys
super + {comma,period}
	bspc node -f {prev,next}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}



#### XF86 keybinds ####
{XF86AudioRaiseVolume,XF86AudioLowerVolume,XF86AudioMute}
    amixer set Master {5%+,5%-,toggle}

XF86Audio{Play,Next,Prev}
    playerctl {play-pause,next,previous}

XF86MonBrightness{Up,Down}
    light {-A,-U} 10

# alternative keybinds for brightness
super + shift + {x,z}
    light {-A,-U} 10

# screenshot tool
Print
    flameshot gui


### Youtube MPV Shortcut ###
super + shift + y
    bash -c 'mpv --x11-name=Float --autofit=500 $(xclip -selection clipboard -o)'



#### MY KEYBINDS ####

# System Shutdown
super + shift + s
    $HOME/.config/polybar/$(cat /tmp/theme)/scripts/powermenu.sh
    # ~/scripts/bspwm_shutdown
    
# Select keyboard layout
super + space
    sh -c $HOME/scripts/toggle-keyboard.sh
    # sh -c "$HOME/.config/polybar/$(cat /tmp/theme)/scripts/keyboard.sh"

# Open neovide
super + {shift,control} + n
    {neovide,gksudo neovide}

# Browser
super + {_,shift +}u
    {firefox,vivaldi-stable}

# File browser
super +{_, shift +} e
    {termite -e ranger,thunar}

# Email client
super + ctrl + e
    thunderbird

# Volume control
super + {_,shift +}a
    {termite --name pulsemixer -e pulsemixer,pavucontrol}

# Task manager
super + {shift,control} + p
    termite {--name htop -e htop, -e htop}



## Program keybinds
super + {_,shift + ,control + }KP_Home
    {termite --name ncspot -e $HOME/scripts/tncspot,spotify,termite --name ncspotfloat -e $HOME/scripts/tncspot}

super + {_,shift +}KP_Up
    {none,none}

super + {_,shift +}KP_Prior
    {blueberry,virt-manager}

super + {_,shift +}KP_Left
    {$HOME/.games/minecraft,steam}

super + {_,shift +}KP_Begin
    {emacsclient -nc,bleachbit}

super + {_,shift +}KP_Right
    {none,calibre}

super + {_,shift +}KP_End
    {gimp,libreoffice}

super + {_,shift +}KP_Down
    {none,none}

super + {_,shift +}KP_Next
    {none,none}
